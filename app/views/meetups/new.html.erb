<% if @eat_area == nil %>
<div class="zipcodeform", align="center">
<h2 class="question">Where area you like to eat?</h2>
<%= form_tag(new_meetup_path, method: "get") %><br>
<h2><%= label_tag(:eat_area, "Enter Address") %></h2><br><div class="address_box"><%= text_field_tag(:eat_area)%> </div><br>
<%= submit_tag "Get Places!", class: "form_button"%>
<% else %>
<div class="yelpList">
<% @yelp_response["businesses"].each do |b| %>
  <div class="grid-item yelp">
    <p>Name:
      <%= b['name']%></p>
    <p>Address:
      <%= b['location']['address1']%>,
      <%= b['location']['city']%>,
      <%= b['location']['zip_code']%></p>
    <p>Price:
      <%= b["price"] %></p>
      <p>Reviews:
        <%= @client.review(b["id"]).reviews[0].text %></p>
    <p>Rating:
      <!-- <%= b["rating"] %></p> -->
      <% if b["rating"] != nil %>
      <% b["rating"].to_i.times do %>
      <img class="star" src="https://png.pngtree.com/svg/20170626/star_rating_425874.png" size="20px">
     <% end %>

      <%= form_for @meetup do |m| %>
      <%= m.time_select :meet_time, start_hour: 8, end_hour: 20, minute_step: 30, include_day: false, include_year: false, include_month: false, required: true %> <br>
      <%= m.date_select :meet_date, :order => [:month, :day, :year], start_year: (Time.now.year), required: true %><br>
      <%= m.text_field :location, value: "#{b['location']['address1']}, #{b['location']['city']}, #{b['location']['zip_code']}", hidden: true, required: true %>
      <%= m.text_field :location_name, value: "#{b['name']}", hidden: true, required: true %>
      <%= m.submit %>
      <%end%>
  </div>
<% end %>
</div>
<% end %>
</div>
<% end %>
